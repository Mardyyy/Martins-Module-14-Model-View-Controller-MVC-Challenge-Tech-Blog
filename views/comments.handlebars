<div class="col-md-6">
    <h3>Create a Comment:</h3>

    <form class="form new-project-form">
        <div class="form-group">
            <label for="project-name">Comment:</label>
            <input class="form-input" type="text" id="project-name" name="project-name" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>

    <div class="text-center">
        <h3>All Comments</h3>
        {{#each comments as |comment| }}
        <div>
            <p>{{comment.comment_text}} by {{comment.user.name}} on
                {{format_date comment.date_created}}
            </p>
        </div>
        {{/each}}
    </div>

</div>

<script src="./js/create.js"></script>